{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "src": ["src"]
    }
  },
  "include": [
    "src"
  ],
  "files": [
    "globals.d.ts"
  ]
}
